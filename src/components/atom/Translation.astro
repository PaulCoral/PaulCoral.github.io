---
import type { LocaleKeys } from "../../assets/locale";
import { useTranslations } from "../../utils/i18n";
import * as marked from "marked";

interface Props {
  key: LocaleKeys;
  className?: string;
}

const { key, className } = Astro.props;

const t = useTranslations(Astro.currentLocale);
function mt(key: LocaleKeys) {
  return marked.parseInline(t(key));
}
---

<div class={className} set:html={mt(key)} />
